<div class="container">
  <h1>New Review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit "Add a Review", class: "btn btn-primary" %>
  <%= link_to "Home", restaurants_path, class: "btn btn-dark" %>
  <% end %>

</div>
